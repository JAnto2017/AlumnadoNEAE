<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_6a">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CEE9C0"
        android:backgroundTint="#C8D0F0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="DEA de Lectura o Dislexia"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:fontFamily="casual"
                android:text="Si muestra un retraso de dos años, de nivel lector, además de problemas con ortografía y al deletreo, aunque presente rendimiento normal en otras áreas. Siendo el coeficiente intelectual superior a 80 en test IA."
                android:textColor="#AD1457"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:fontFamily="casual"
                android:text="Esta dificultad no se debe a una inadecuada escolarización, ni desequilibrios emocionales, dificultades de visión o audición, retraso intelectual, problemas socioculturales, o trastornos del lenguaje oral."
                android:textColor="#AD1457"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#64AAD3"
                android:text="Retornar"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>